<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th scope="col"><%= link_to "Title", :sort => "title" %></th>
    <th scope="col"><%= link_to "Rating", :sort => "rating" %></th>
    <th scope="col"><%= link_to "Description", :sort => "description" %></th>
    <th scope="col"><%= link_to "Release Date", :sort => "release_date" %></th>
    <th scope="col">Edit</th>
  </tr>
  </thead>
  <tbody>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.rating %></td>
      <td><%= movie.description %></td>
      <td><%= movie.release_date.strftime("%b %d, %Y") %></td>
      <td><%= link_to "Show/Edit", movie %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<%= link_to "New movie", new_movie_path %>
